{% for host, vars in salt['pillar.get']('icinga2:hosts').items() %}
object Host "{{ host }}" {
  import "{{ vars['template'] }}"
  check_command = "ping4"
  address = "{{ vars['ip'] }}"
}
{% endfor %}
